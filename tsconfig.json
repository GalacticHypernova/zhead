{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "paths": {
      "zhead": ["packages/zhead/src/index.ts"],
      "zhead/*": ["packages/zhead/*"],
      "@zhead/schema": ["packages/schema/src/index.ts"],
      "@zhead/schema/*": ["packages/schema/*"]
    }
  },
}
